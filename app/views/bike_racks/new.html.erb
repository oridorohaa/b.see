<div data-controller='address-input' class="new-container">
  <div class="navbar">
    <%= link_to bike_racks_path do %>
      <i class="fa-solid fa-chevron-left fa-xl"></i>
    <% end %>
    <%= link_to profile_path(current_user) do %>
      <% if current_user.avatar.attached? %>
        <%= cl_image_tag current_user.avatar.key, height: 50, width: 50, crop: :fill, class: "avatar-medium" %>
      <% else %>
        <i class="fa-solid fa-user fa-2xl default-avatar"></i>
      <% end %>
    <% end %>
  </div>

  <%= simple_form_for(@bike_rack) do |f| %>
    <%= f.input :address, label: false, placeholder: 'address'  %>
    <%= f.input :description, label: false, placeholder: 'description...' %>
    <%= f.input :latitude, label: false, placeholder: 'latitude...' %>
    <%= f.input :longitude, label: false, placeholder: 'longitude...' %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit "+", class: "submit" %>
  <% end %>
</div>
