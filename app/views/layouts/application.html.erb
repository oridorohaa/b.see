<style>

.alert {
  position: absolute;
  color: #F5FF;
  background-color: #1C1C17;
  top: 0%;
  right: 0%;
  width: 70%;
  height: 10%;
  border: 1px solid #F5FF;
  border-radius: 20px;
  margin: 10px;
  display: flex;
  align-items: center;
  font-weight: bold;
}

.alert:empty {
  display: none;
}


.notice {
  background-color: #1C1C17;
  color: #F5FF;
  border: 1px solid #F5FF;
  border-radius: 20px;
  font-weight: bold;
  transition: all 1s ease;
  position: absolute;
  top: 12%;
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
  height: 50px;
}

.notice:empty {
  display: none;
}

.fade {
  opacity: 0;
}

.hide {
  display: none;
}

</style>
