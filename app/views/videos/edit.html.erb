<div class="edit-container">
  <div class="navbar">
    <%= link_to videos_path do %>
      <i class="fa-solid fa-circle-chevron-left fa-xl"></i>
    <% end %>
    <%=link_to profile_path(current_user) do %>
      <% if current_user.avatar.attached? %>
        <%= cl_image_tag current_user.avatar.key, height: 50, width: 50, crop: :fill, class: "avatar-medium" %>
      <% else %>
        <i class="fa-solid fa-user fa-2xl default-avatar"></i>
      <% end %>
    <% end %>
  </div>

  <%= simple_form_for(@video) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.submit "edit video", class: "submit" %>
  <% end %>
</div>



<style>
.fa-house{
  position:absolute;
  font-size:30px;
  left: 86%;
  top: 3%;
}
.edit{
  background:#F5FF6D;
  width:80%;
  padding: 10px 0;
  border-radius:25px;
}
.edit-container{
  width:100%;
  display:flex;
  flex-direction:column;
  justify-content: center;
}

.simple_form{
  width:100%;
}
.form-control{
  border-radius:10px;
  width:80%;
  background:none;
  border: 1px solid #F5FF6D;
  color:white;
}

.form-control:focus{
  background:none;
  color:white;
}

.form-label{
  color: #F5FF6D;
}


</style>
