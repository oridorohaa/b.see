<%= @shop.address %><br>
<%= @shop.description %><br>
<%= @shop.hours %><br>
<%= @shop.phone_number %><br>
<%= @shop.website %><br>
<%= link_to "edit shop", edit_shop_path(@shop) %> <br>
<%= link_to "like", shop_shop_likes_path(@shop), data:{ turbo_method: :post} %> <br>
<%= link_to "unlike", shop_shop_like_path(@shop), data:{ turbo_method: :delete} %><br>
<%= link_to "delete shop", shop_path(@shop),  data: {turbo_method: :delete} %><br>
<%= link_to "report", new_shop_shop_report_path(@shop) %>

<ul>
  <% @shop.shop_comments.each do |shop_comment| %>
    <li>
      <%= shop_comment.comment.content %>
      <%= link_to 'delete', shop_shop_comment_path(shop_comment), data: {turbo_method: :delete} %>
    </li>
  <% end %>
</ul>

<%= simple_form_for([@shop, @shop_comment]) do |f| %>
  <%= f.simple_fields_for :comments do |comments_form| %>
    <%= comments_form.input :content %>
  <% end %>
  <%= f.submit 'add' %>
<% end %>
