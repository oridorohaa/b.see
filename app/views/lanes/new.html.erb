<%= simple_form_for(@lane) do |f| %>
  <%= f.input :coords%>
  <%= f.input :drescription %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit "create lane", class:"submit" %>
<% end %>
</div>

<style>

.fa-house{
  position:absolute;
  font-size:30px;
  left: 12%;
  top: 9%;
}

.submit{
  background:#F5FF6D;
  width:80%;
  padding: 10px 0;
  border-radius:25px;
}
.container{
  position:relative;
  display:flex;
  flex-direction:column;
  justify-content: center;
  align-items: flex-end;

}
.form-control{
  border-radius:10px;
  width:80%;
  background:none;
  border: 1px solid #F5FF6D;
  color:white;
}

.form-control:focus{
  background:none;
  color:white;
}

.form-label{
  color: #F5FF6D;
}

#map {
  width: 100%;
  height: 400px;
}

input[type="file"]::file-selector-button {
  border: 2px solid #f5ff6d;
  padding: 0.2em 0.4em;
  border-radius: 0.2em;
  background-color: #f5ff6d;
  transition: 1s;
}

input[type="file"]::file-selector-button:hover {
  background-color: #81ecec;
  border: 2px solid #00cec9;
}

</style>
