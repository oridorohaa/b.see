<div class="new-container">
  <div class="lanes-navbar">
    <%= link_to lanes_path do %>
      <i class="fa-solid fa-circle-chevron-left fa-xl" style="margin-left: 8px;"></i>
    <% end %>
    <div class="nav-div" data-controller='search-address' >
        <input type="text" class="search-input" placeholder="search location...">
        <input type="text" class ="lat" style="display:none">
        <input type="text" class ="long" style="display:none">
      <i class="fa-solid fa-magnifying-glass"></i>
    </div>
    <%= link_to profile_path(current_user) do %>
      <% if current_user.avatar.attached? %>
        <%= cl_image_tag current_user.avatar.key, height: 50, width: 50, crop: :fill, class: "avatar-medium" %>
      <% else %>
        <i class="fa-solid fa-user fa-2xl default-avatar"></i>
      <% end %>
    <% end %>
  </div>

  <div id="map" class="map" data-controller="lanes-new-google-maps" style="height:564px; width:90%; border:2px solid #F5FF6D; left:20px; border-radius:7px;"></div>

  <%= simple_form_for(@lane) do |f| %>
    <%= f.input :coords, label: false, placeholder: "coords..." %>
    <%#= f.input :street_name %>
    <%= f.input :drescription, as: :text, label: false, placeholder: "description..." %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= button_tag(class: "submit") do %>
      <i class="fa-solid fa-plus fa-lg"></i>
    <% end %>
  <% end %>
</div>
